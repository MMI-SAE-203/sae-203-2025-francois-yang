---
import Layout from "../../layouts/Layout.astro";
import ActiviteCard from "../../components/ActiviteCard.astro";
import { getAllActivitiesByDate } from "../../../backend/backend.mjs";
import "../../styles/global.css";
const activites = await getAllActivitiesByDate();
---

<Layout title="Les activités du festival">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold text-center my-8">
            Les activités du festival
        </h1>

        <div class="max-w-6xl mx-auto">
            <div
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 my-12"
            >
                {
                    activites.length > 0 ? (
                        activites.map((activite) => (
                            <ActiviteCard {...activite} />
                        ))
                    ) : (
                        <p class="text-center col-span-full text-lg">
                            Aucune activité à afficher pour le moment.
                        </p>
                    )
                }
            </div>
        </div>
    </div>
</Layout>
